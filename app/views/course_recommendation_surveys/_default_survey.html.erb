<%= field_set_tag do %>
  <strong><p class="black-modal-text">3. <%= t("course_recommendation_survey.topics.question") %></p></strong>
  <ul class="less-padding">
    <% @topics.each do |topic| %>
        <li>
          <%= check_box_tag "topics[]", topic.id %>
          <% label_text = I18n.translate!("course_recommendation_survey.topics.#{topic.translation_key}") %>
          <%= label_tag("topics[]", label_text, class: "inline-label") %>
        </li>
    <% end %>
  </ul>
<% end %>
