<%= field_set_tag do %>
  <strong><p class="black-modal-text">1. <%= t("course_recommendation_survey.desktop.question") %></p></strong>
  <ul class="less-padding">
    <% ['Beginner', 'Intermediate', 'Advanced', 'Expert'].each do |level| %>
      <li>
        <%= radio_button_tag(:desktop_level, level) %>
        <% label_text = t("course_recommendation_survey.desktop.#{level.downcase}") %>
        <%= label_tag("desktop_level_#{level.downcase}", label_text, class: "inline-label") %>
      </li>
    <% end %>
  </ul>
<% end %>

