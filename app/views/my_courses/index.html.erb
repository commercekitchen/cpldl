<h2 class="text-color"><%= t('my_courses_page.my_plan_click_to_start') %></h2>

<p>
  <%= i18n_with_default("my_courses_page.#{current_organization.subdomain}.course_color_explaination") %>
  <%= t("my_courses_page.add_more") %>
  <%= link_to "#{ t('my_courses_page.click_here_to_homepage') }", root_path %>

  <% unless @skip_quiz %>
    <%= t('my_courses_page.completed_most_courses') %> <%= link_to "#{t('my_courses_page.click_here_to_quiz')}", new_course_recommendation_survey_path %>
    <%= t('my_courses_page.well_suggest_more_courses') %>
  <% end %>
</p>

<% if lookup_context.exists?(current_subdomain, ['shared/courses/custom_components/course_intro'], true) %>
  <%= render "shared/courses/custom_components/course_intro/#{current_subdomain}" %>
<% end %>

<%= render "shared/courses/listing" %>

<% if @results && @results.blank? %>
  <p>No courses match your search. <%= link_to "View all your courses", my_courses_path %></p>
<% end %>
